<Window x:Class="Projekt2_Verseny_JakabLaszlo_11B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt2_Verseny_JakabLaszlo_11B"
        mc:Ignorable="d"
        Title="Projekt2_Verseny" Height="684" Width="820">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="startGomb" Content="Start" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Width="100" Click="startGomb_Click"/>
        <Button x:Name="ujfutamGomb" Content="Új futam" HorizontalAlignment="Left" Margin="158,30,0,0" VerticalAlignment="Top" Width="100" Click="ujfutamGomb_Click"/>
        <Button x:Name="ujbajnoksagGomb" Content="Új bajnokság" HorizontalAlignment="Left" Margin="290,30,0,0" VerticalAlignment="Top" Width="100" Click="ujbajnoksagGomb_Click"/>
        <Rectangle Fill="#FFB9B9C7" HorizontalAlignment="Left" Height="420" Margin="30,70,0,0" Stroke="Black" VerticalAlignment="Top" Width="720" Grid.ColumnSpan="2"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="420" Margin="180,70,0,0" Stroke="Black" VerticalAlignment="Top" Width="10"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="3" Margin="30,210,0,0" Stroke="Black" VerticalAlignment="Top" Width="720" Grid.ColumnSpan="2"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="3" Margin="30,350,0,0" Stroke="Black" VerticalAlignment="Top" Width="720" Grid.ColumnSpan="2"/>
        <Image x:Name="koriVapor" HorizontalAlignment="Left" Height="120" Margin="30,70,0,0" VerticalAlignment="Top" Width="731" Source="alma1.jpg" Grid.ColumnSpan="2"/>
        <Image x:Name="koriSupreme" HorizontalAlignment="Left" Height="120" Margin="30,215,0,0" VerticalAlignment="Top" Width="732" Source="alma2.jpg" Grid.ColumnSpan="2"/>
        <Image x:Name="koriNexus" HorizontalAlignment="Left" Height="120" Margin="30,355,0,0" VerticalAlignment="Top" Width="732" Source="kocsola.png" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>
        <Label x:Name="rajtSzovege" Content="Rajt" HorizontalAlignment="Left" Height="140" Margin="79,245,0,0" VerticalAlignment="Top" Width="324" FontSize="100" FontFamily="Showcard Gothic" RenderTransformOrigin="0.5,0.5" Foreground="#FFFBFBFB">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Cél" HorizontalAlignment="Left" Margin="50,203,0,0" VerticalAlignment="Top"
           FontSize="100" FontFamily="Showcard Gothic" Foreground="White" RenderTransformOrigin="0.5,0.5" Grid.Column="1" Height="154">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
        </Label>
        <Label Content="A bajnokság állása:" HorizontalAlignment="Left" Height="50" Margin="41,523,0,0" VerticalAlignment="Top" Width="169" FontSize="18"/>
        <Rectangle x:Name="vegeVonal" Fill="Black" HorizontalAlignment="Left" Height="420" Margin="215,70,0,0" Stroke="Black" VerticalAlignment="Top" Width="12" Grid.Column="1"/>
        <Label x:Name="eredmenyek" Grid.ColumnSpan="2" Content="" HorizontalAlignment="Left" Height="68" Margin="234,516,0,0" VerticalAlignment="Top" Width="398"/>
    </Grid>
</Window>
